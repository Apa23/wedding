---
type Props = {
  id?: string
  theme?: 'primary' | 'secondary'
  role?: 'article' | 'section'
}

const { id, theme, role = 'article' } = Astro.props
---

<article
  id={id}
  class={`w-full flex flex-col px-10 lg:px-35 lg:py-20 ${theme === 'secondary' ? 'secondary' : 'primary'} ${role === 'article' ? 'gap-4 items-center justify-center mx-auto ' : ''}`}
>
  <slot name='title' />
  <slot name='content' />
</article>
<style>
  article.primary {
    color: var(--color-text);
  }

  article.secondary {
    color: var(--color-accent);
    background-color: var(--color-primary);
  }
</style>
