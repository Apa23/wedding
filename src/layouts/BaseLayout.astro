---
import '../styles/global.css'
import '../styles/variables.css'
import Button from '../components/ui/Button'
import SEO from '../components/SEO.astro'
import { ClientRouter } from 'astro:transitions'
import Footer from '../components/Footer.astro'
import Logo from '../components/ui/logo.astro'

const pageTitle = Astro.props.pageTitle || 'Andr√©s & Valentina'
---

<!doctype html>
<html lang='es' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Alice&family=Almarai:wght@300;400;700;800&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <SEO schemaType='WebPage' />
    <ClientRouter />
  </head>
  <body>
    <header class='flex items-center justify-between py-8 px-8 w-full z-10'>
      <Logo style='color: var(--color-text)' />
      <h1 class='text-3xl text-[var(--color-text)]'>{pageTitle}</h1>
      <nav class='flex flex-row items-center justify-between gap-4'>
        <Button
          client:load
          id='back-button'
          label='Regresar'
          route='/'
          variant='dark'
          className='flex justify-center items-center gap-1 ml-10 text-sm'
        />
      </nav>
    </header>
    <main class="mb-20">
      <slot />
    </main>
    <Footer />  
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--color-accent);
  }

  header {
    background-color: var(--color-background);
  }
</style>
